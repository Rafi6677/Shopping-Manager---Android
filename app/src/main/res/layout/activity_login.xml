<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:focusableInTouchMode="true">

    <Button
            android:text="Zaloguj się"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/login_Button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordInputLogin_EditText"
            app:layout_constraintStart_toStartOf="@+id/passwordInputLogin_EditText"
            app:layout_constraintEnd_toEndOf="@+id/passwordInputLogin_EditText"/>
    <TextView
            android:text="Wróć do rejestracji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/backToRegistration_TextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_Button"
            app:layout_constraintStart_toStartOf="@+id/login_Button"
            app:layout_constraintEnd_toEndOf="@+id/login_Button"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/emailInputLogin_EditText" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:hint="Email"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:inputType="textEmailAddress"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/passwordInputLogin_EditText"
            app:layout_constraintTop_toBottomOf="@+id/emailInputLogin_EditText"
            app:layout_constraintEnd_toEndOf="@+id/emailInputLogin_EditText"
            app:layout_constraintStart_toStartOf="@+id/emailInputLogin_EditText" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Hasło"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="Shopping Manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="29sp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>